{
    "url": "https://__DOMAIN____PATH__",
    "server": {
        "host": "127.0.0.1",
        "port": __PORT__
    },
    "database": {
        "client": "mysql",
        "connection": {
            "host"     : "127.0.0.1",
            "user"     : "__DB_USER__",
            "password" : "__DB_PWD__",
            "database" : "__DB_NAME__"
        }
    },
    "auth": {
        "type": "password"
    },
    "paths": {
        "contentPath": "content/"
    },
    "logging": {
        "level": "info",
        "rotation": {
            "enabled": true
        },
        "transports": ["file", "stdout"]
    }
}
